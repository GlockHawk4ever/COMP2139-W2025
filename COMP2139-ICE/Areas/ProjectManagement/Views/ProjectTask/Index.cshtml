@model IEnumerable<COMP2139_ICE.Areas.ProjectManagement.Models.ProjectTask>

@{
    ViewData["Title"] = "Tasks List";
    var project = ViewBag.Project as COMP2139_ICE.Areas.ProjectManagement.Models.Project;
    bool isSearch = ViewBag.IsSearch == true;
    string searchTerm = ViewBag.SearchTerm as string;
}

<h1 class="mb-3">Tasks List</h1>

@if (project != null)
{
    <p><strong>Project:</strong> @Html.DisplayFor(m => project.Name, "ProjectName") (@project.Id)</p>
}

@if (!Model.Any())
{
    if (isSearch)
    {
        <p>No tasks found for "@searchTerm".</p>
    }
    else if (project != null)
    {
        <p>No tasks for this project.</p>
    }
    else
    {
        <p>No tasks available.</p>
    }
}
else
{
    @if (isSearch && !string.IsNullOrWhiteSpace(searchTerm))
    {
        <p>Showing results for "<strong>@searchTerm</strong>".</p>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Project ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.ProjectTaskId</td>
                <td>@Html.DisplayFor(modelItem => t.Title, "ProjectTaskTitle")</td>
                <td>@t.Description</td>
                <td>@t.ProjectId</td>
                <td>
                    <a asp-area="ProjectManagement"
                       asp-controller="ProjectTask"
                       asp-action="Details"
                       asp-route-id="@t.ProjectTaskId"
                       class="btn btn-sm btn-info">Details</a>
                    <a asp-area="ProjectManagement"
                       asp-controller="ProjectTask"
                       asp-action="Edit"
                       asp-route-id="@t.ProjectTaskId"
                       class="btn btn-sm btn-warning">Edit</a>
                    <a asp-area="ProjectManagement"
                       asp-controller="ProjectTask"
                       asp-action="Delete"
                       asp-route-id="@t.ProjectTaskId"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<p>
    @if (project != null)
    {
        <a asp-area="ProjectManagement"
           asp-controller="ProjectTask"
           asp-action="Create"
           asp-route-projectId="@project.Id"
           class="btn btn-primary">Create New Task</a>
        <a asp-area="ProjectManagement"
           asp-controller="Projects"
           asp-action="Index"
           class="btn btn-secondary">Back to Projects</a>
    }
    else
    {
        <a asp-area="ProjectManagement"
           asp-controller="Projects"
           asp-action="Index"
           class="btn btn-secondary">Back to Projects</a>
    }
</p>
