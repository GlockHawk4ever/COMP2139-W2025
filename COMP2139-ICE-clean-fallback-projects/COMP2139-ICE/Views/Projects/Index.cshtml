@model IEnumerable<COMP2139_ICE.Models.Project>
@{
    ViewData["Title"] = "Projects";
}
<h1 class="mb-3">@ViewData["Title"]</h1>

@if (ViewBag.DbError != null) {
    <div class="alert alert-warning">
        <strong>Database connection problem:</strong> @ViewBag.DbError<br />
        The Projects page will still load, but it wonâ€™t show data until the database is configured.<br />
        Make sure your PostgreSQL is running and run migrations:
        <pre>dotnet ef migrations add InitialCreate
dotnet ef database update</pre>
    </div>
}
<p>
    <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No projects yet. Click "Create New Project" to add one.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Start</th>
                <th>Due</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@(p.StartDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@(p.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
