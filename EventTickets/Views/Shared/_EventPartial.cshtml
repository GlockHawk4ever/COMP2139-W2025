@model IReadOnlyList<EventTickets.Models.Event>

@if (Model.Count == 0)
{
    <p class="muted">No matching events.</p>
}
else
{
    <table class="event-results">
        <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Date</th>
            <th>Price</th>
            <th>Available</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Title</td>
                <td>@e.Category?.Name ?? "-"</td>
                <td>@(e.DateTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                <td>$@e.Price</td>
                <td>@e.AvailableTickets</td>
            </tr>
        }
        </tbody>
    </table>
}
