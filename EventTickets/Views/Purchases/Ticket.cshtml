@model EventTickets.Models.Purchase
@{
    Layout = "_Layout";
    ViewData["Title"] = "Your Ticket";
}

<section class="ticket-page">
    <h1>Event Ticket</h1>

    <article class="ticket-card">
        <header>
            <h2>@Model.Event?.Title</h2>
            <p>@Model.Event?.DateTime?.ToString("dddd, MMM dd yyyy - HH:mm")</p>
        </header>

        <div class="ticket-body">
            <div class="ticket-details">
                <p><strong>Name:</strong> @Model.CustomerName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Quantity:</strong> @Model.Quantity</p>
                <p><strong>Total Paid:</strong> @Model.Total.ToString("C")</p>
                <p><strong>Purchased At:</strong> @Model.PurchasedAt.ToString("g")</p>
            </div>
            <div class="ticket-qr-wrapper">
                <img class="dashboard-qr"
                     src="@Url.Action("TicketQr", "Purchases", new { id = Model.Id })"
                     alt="QR code" />
            </div>
        </div>
        <footer>
            <p>Show this ticket with the QR code at event entry.</p>
        </footer>
    </article>
</section>
