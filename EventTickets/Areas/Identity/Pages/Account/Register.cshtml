@page
@model EventTickets.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="card" style="max-width:480px;margin:1.5rem auto;">
    <form method="post">
        <h2>Create a new account</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Input.FullName"></label>
            <input asp-for="Input.FullName" class="text-input" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="text-input" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="text-input" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="text-input" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Role"></label>
            <select asp-for="Input.Role" class="text-input" asp-items="Model.RoleOptions"></select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>

        <p class="hint">
            Role meanings for this assignment:
            <br /><strong>Admin</strong> – manages everything in the system.
            <br /><strong>Organizer</strong> – can create new events and edit <em>only their own</em> events.
            <br /><strong>Attendee</strong> – can browse events, buy tickets, and view their purchase history.
            <br />Seeded test accounts are still available:
            <em>admin@example.com</em>, <em>organizer@example.com</em>, <em>attendee@example.com</em>.
        </p>

        <button type="submit" class="btn">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
